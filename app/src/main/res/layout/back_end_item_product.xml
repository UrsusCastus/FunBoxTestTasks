<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/back_end_item_name_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_weight="55"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:text="Canon EOS 1100D Kit" />

    <TextView
        android:id="@+id/back_end_item_number_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="30"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="24sp"
        tools:text="2 шт." />

    <ImageButton
        android:id="@+id/back_end_item_arrow_right_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="15"
        android:backgroundTint="@color/windowBackground"
        android:src="@drawable/back_end_item_ic_arrow_right_up"
        tools:ignore="ContentDescription" />

</LinearLayout>
