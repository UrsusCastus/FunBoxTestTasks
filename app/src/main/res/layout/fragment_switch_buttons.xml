<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View style="@style/VerticalDivider" />

    <Button
        android:id="@+id/fragment_switch_buttons_button_store_front"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/store_front"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:background="@drawable/button_pressed_background"
        tools:ignore="ButtonStyle" />

    <View style="@style/VerticalDivider" />

    <Button
        android:id="@+id/fragment_switch_buttons_button_back_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/back_end"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:background="@drawable/button_not_pressed_background"
        tools:ignore="ButtonStyle" />

    <View style="@style/VerticalDivider" />

</LinearLayout>
